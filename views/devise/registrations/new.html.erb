<div class="row user_setup" >
  <div class="col-md-4 col-md-offset-2 user_setup_content">
    <div class="col-md-10 col-md-offset-12 login">
  <h3>注册账号</h3>
  <hr/>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <div style="margin-bottom: 25px" class="input-group">
      <span class="input-group-addon ">注册邮箱</span>
      <%= f.input :email, :label => false, :error => false,  placeholder:'邮箱地址',required: true, autofocus: true %>
    </div>
    <div style="margin-bottom: 25px" class="input-group">
      <span class="input-group-addon">设置密码</span>
      <%= f.input :password, :label => false, :error => false, placeholder: '密码,至少为8位数字英文组合', required: true %>
    </div>
    <div style="margin-bottom: 25px" class="input-group">
      <span class="input-group-addon">确定密码</span>
      <%= f.input :password_confirmation, :label => false, :error => false, placeholder: '请再次输入密码', required: true %>
    </div>
    <%= rucaptcha_image_tag(alt: 'Captcha') %>
    <%= rucaptcha_input_tag(class: 'form-control', placeholder: '请输入验证码') %>
  </div>


  <div class="form-actions">
    <%= f.button :submit, "注册", class: "button" %>
  </div>
<% end %>
<hr/>

     <div class = "account">
      已有账号？<%= link_to "登录", new_session_path(resource_name, ) %>
     </div>
   </div>
 </div>
</div>
