<!DOCTYPE html>
<html>
<head>
  <title>个人中心</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
   <link rel="shortcut icon" href="/images/usercenter.png">
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="content">
    <div class="container-fluid">
      <%= render "common/navbar" %>
     <div class="container">
      <div class="panel panel-default">
        <div class="panel-heading text-center"><i class="fa fa-user-circle-o"> &nbsp 个人中心</i></div>
        <div class="panel-body">
            <div class="col-md-2 usercenter-style">
              <ul class="nav nav-pills1 nav-stacked" style="max-width: 300px;">
                <li class="btn">
                  <i class="fa fa-cog" aria-hidden="true">&nbsp &nbsp<%= link_to "个人设置", account_users_path(current_user), class: 'user-set' %></i>
                </li>
                <li class="btn">
                  <i class="fa fa-star" aria-hidden="true">&nbsp &nbsp<%= link_to("我的收藏", favorites_path, class: 'user-set' )%></i>
                </li>
                <li class="btn">
                  <i class="fa fa-file-text" aria-hidden="true">&nbsp &nbsp<%= link_to("我的订单", account_orders_path, class: 'user-set')%></i>
                </li>
              </ul>
            </div>
            <div class="col-md-8">
              <%= yield %>
            </div>
          </div>
        </div>
      </div>
      </div>
    </div>
  </div>
  <%= render "common/footer" %>
</body>
</html>
