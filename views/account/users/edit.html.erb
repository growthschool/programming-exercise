<div class="user-profile">
    <h3 class="text-center"> 修改个人资料</h3>
    </br>
      <%= simple_form_for [:account, @user] do |f| %>
       <div>
        <%= f.input :username, :label => "用户名"%>
        <%= f.input :address, :label => '地址'  %>
        <%= f.input :email, :lable => "邮箱地址"%>
        <%= f.submit "提交", class: " btn btn-sm btn-default"%>
      </div>
    <% end %>
</div>
