<h3 class="text-center">收藏列表</h3>
</br>
<div class="favorite-top-count">
  您共收藏了 <%= @products.count %> 件商品
</div>
<br>
<div class="row ">
  <% @products.each do |product| %>
    <div class="col-xs-6  product-favorite product-content">
      <div class="minHeight1000 bg-gray">
        <div class="box panel product-search p15 fl panel-default">
          <p class="productList-item-pic w200 h200">

         <%= link_to product_path(product) do %>
           <% if product.image.present? %>
             <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
           <% else %>
             <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
           <% end %>
         <% end %>
         </p>

          <div class="panel-body" style="padding:5px;">
              <p class="productList-item-price fb col-red f18 mt10">￥<%= product.price %></p>
              <p class="productList-item-name ell">
              <%= link_to product_path(product) do %>
                <%= product.title %>
              <% end %>
              <br/>
              <span class="pull-right">
                  <%= link_to add_to_cart_product_path(product),   method: :post do %>
                    <i class="fa fa-shopping-cart"></i>
                  <% end %>
              </span>

          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>
