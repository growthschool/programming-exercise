<div class="w1200 cartpage clearfix bc mt30 pb20">
  <div class="logo fl"><%=link_to("购物车", products_path, class: "col-black")%></div>
  <div><%= link_to("清空购物车", clean_carts_path,
               method: :delete, class: "pull-right btn btn-default cart_delete",
               data: { confirm: "你确定要清空购物车么？"})%></div>
</div>


